<% layout ("/layouts/boilerplate") %>

<% const selectedCategory = typeof category !== "undefined" ? category : ""; %>

        <button class="category-toggle d-none" onclick="document.querySelector('.category-hamburger').classList.toggle('d-flex')">
            <i class="fa fa-bars"></i> Categories
        </button>
<div class="filters-wrapper">

    <div id="filters">
        <div class="filter">
            <a href="/listings/category/Trending" class="category <%= selectedCategory === 'Trending' ? 'active' : '' %>">
                <div><i class="fa-solid fa-fire"></i></div>
                <span>Trending</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Rooms" class="category <%= selectedCategory === 'Rooms' ? 'active' : '' %>">
                <div><i class="fa-solid fa-bed"></i></div>
                <span>Rooms</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Iconics" class="category <%= selectedCategory === 'Iconics' ? 'active' : '' %>">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <span>Iconic Cities</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Mountains" class="category <%= selectedCategory === 'Mountains' ? 'active' : '' %>" >
                <div><i class="fa-solid fa-mountain"></i></div>
                <span>Mountains</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Castles" class="category <%= selectedCategory === 'Castles' ? 'active' : '' %>">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <span>Castles</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Pools" class="category <%= selectedCategory === 'Pools' ? 'active' : '' %>">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <span>Amazing Pools</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Camping" class="category <%= selectedCategory === 'Camping' ? 'active' : '' %>">
                <div><i class="fa-solid fa-campground"></i></div>
                <span>Camping</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Farms" class="category <%= selectedCategory === 'Farms' ? 'active' : '' %>">
                <div><i class="fa-solid fa-cow"></i></div>
                <span>Farms</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Arctic" class="category <%= selectedCategory === 'Arctic' ? 'active' : '' %>">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <span>Arctic</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Domes" class="category <%= selectedCategory === 'Domes' ? 'active' : '' %>">
                <div><i class="fa-solid fa-igloo"></i></div>
                <span>Domes</span>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Boats" class="category <%= selectedCategory === 'Boats' ? 'active' : '' %>">
                <div><i class="fa-solid fa-ship"></i></div>
                <span>Boats</span>
            </a>
        </div>
        <div class="tax-toggle">
            <div class="form-check form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
</div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%=listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <div class="card-img-overlay"></div>
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                       <b><%=listing.title%> <br></b>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info">&nbsp; &nbsp;+18%GST</i>
                    </p>
                </div>
                </div>
            </a>
        <%} %>       
    </div>



<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }
            else{
                info.style.display = "none";
            }
        };
    });
</script>