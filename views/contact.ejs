<% layout("layouts/boilerplate") %>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

            <h1 class="mb-3 text-center fw-bold">Contact Us</h1>
            <p class="text-muted text-center mb-4">We’re here to help!</p>

            <p class="lh-lg">
                If you have any questions, feedback, or need assistance regarding the Wanderlust platform,
                feel free to get in touch with us. We strive to respond to all inquiries promptly.
            </p>

            <h6 class="mt-4 fw-bold">Email</h6>
            <p class="lh-lg">
                <a href="mailto:support@wanderlust.com">support@wanderlust.com</a>
            </p>

            <h6 class="mt-4 fw-bold">Support Form</h6>
            <p class="lh-lg">
                You can also contact us via the form below. Please provide your name, email, and message,
                and we will get back to you as soon as possible.
            </p>

            <!-- Simple Contact Form -->
            <form action="/contact" method="POST" class="mt-3">
                <div class="mb-3">
                    <label for="name" class="form-label fw-bold">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label fw-bold">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-outline-dark">Send Message →</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a href="/listings" class="btn btn-outline-dark">← Back to Home Page</a>
            </div>

        </div>
    </div>
</div>
